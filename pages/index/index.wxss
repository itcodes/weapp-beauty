.image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.result {
  position: relative;
  margin: 700rpx 40rpx 0;
  padding: 50rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  font-size: 32rpx;
  line-height: 2;
  color: #495057;
}

.result::before {
  position: absolute;
  top: -80rpx;
  left: 295rpx;
  content: "";
  width: 0;
  height: 0;
  border: 40rpx solid transparent;
  border-bottom-color: rgba(255, 255, 255, 0.95);
}

.controls {
  position: fixed;
  bottom: 0;
  margin-bottom: 100rpx;
  width: 100%;
}

.tips {
  position: relative;
  width: 450rpx;
  margin: 50rpx auto;
  padding: 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  text-align: center;
  font-size: 24rpx;
  animation: tips 0.8s infinite;
}

.tips::after {
  position: absolute;
  bottom: -40rpx;
  left: 225rpx;
  content: "";
  width: 0;
  height: 0;
  border: 20rpx solid transparent;
  border-top-color: rgba(255, 255, 255, 0.8);
}

@keyframes tips {
  from {
    transform: translateY(-30rpx);
  }
  35% {
    transform: translateY(0);
  }
  to {
    transform: translateY(-30rpx);
  }
}

.button {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 260rpx;
  padding: 5rpx 50rpx;
  border-radius: 50rpx;
  background: rgba(204, 204, 204, 0.7);
  color: #141c1a;
}

.button-hover {
  background: rgba(204, 204, 204, 0.9);
}

